pipeline {
    agent any

    environment {
        jenkinsurl = "" // Define initial value for jenkinsurl
    }

    stages {
        stage('stage1') {
            steps {
                script {
                    // Set jenkinsurl to "vaibhav"
                    env.jenkinsurl = "vaibhav"
                    // Print jenkinsurl using echo
                    echo "Value of jenkinsurl in stage1: ${env.jenkinsurl}"
                }
            }
        }
    }
}
